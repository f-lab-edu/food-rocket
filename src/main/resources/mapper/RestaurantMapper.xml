<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.hoon.foodrocket.mapper.RestaurantMapper">

    <!-- 가게 목록 -->
    <select id="findAll" resultType="com.hoon.foodrocket.domain.Restaurant">
        select id, name, address, owner_email ownerEmail
        from restaurant
    </select>

    <!-- 가게 조회 -->
    <select id="getRestaurant" parameterType="Long" resultType="com.hoon.foodrocket.domain.Restaurant">
        select id, name, address, owner_email ownerEmail
        from restaurant
        where id = #{id}
    </select>

    <!-- 가게 등록 -->
    <insert id="addRestaurant" parameterType="com.hoon.foodrocket.domain.Restaurant">
        insert into restaurant (
            name,
            address,
            owner_email
        )
        values (
            #{name},
            #{address},
            #{ownerEmail}
        )
    </insert>

    <!-- 가게 수정 -->
    <update id="updateRestaurant" parameterType="com.hoon.foodrocket.domain.Restaurant">
        update restaurant
        set name = #{name}, address = #{address}
        where id = #{id}
    </update>

    <!-- 가게 삭제 -->
    <delete id="deleteRestaurant" parameterType="Long">
        delete from restaurant
        where id = #{id}
    </delete>

</mapper>